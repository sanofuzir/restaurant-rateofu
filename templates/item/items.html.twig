{% extends 'base.html.twig' %}

{% block title %}Items{% endblock %}

{% block body %}

<div class="container">
  <div class="row justify-content-end">
    <h1 class="header">{% trans from "app" %}Administration{% endtrans %}&nbsp;>>&nbsp;{% trans from "app" %}Items{% endtrans %}</h1>
  </div>
  <hr>
  <div class="row">
    <div class="col mybox">
    	<h2 style="text-indent: 50px;">{% trans from "app" %}Items{% endtrans %}</h2>
    	<a href="{{ path('add_item') }}" class="rounded float-right">
    		<button type="button" class="btn btn-secondary btn-sm">
    			<i class="fas fa-plus"></i>&nbsp;{% trans from "app" %}Add item{% endtrans %}
    		</button>
    	</a>
    	<br>
    	<br>
    	<table class="table table-hover">
    		<thead>
				<tr>    				
		            <th scope="col">{% trans from "app" %}Name{% endtrans %}</th>
		            <th scope="col">{% trans from "app" %}Type{% endtrans %}</th>
		            <th scope="col">{% trans from "app" %}Description{% endtrans %}</th>
		            <th scope="col">{% trans from "app" %}Price{% endtrans %}</th>
			      	<th scope="col">{% trans from "app" %}Operation{% endtrans %}</th>
				</tr>
    		</thead>
			<tbody>
  				{% for item in items %}
				    <tr>
				      <td scope="row">{{ item.name }}</td>
                  	  <td>{{ item.type }}</td>
		              <td>{{ item.description }}</td>
		              <td>{{ item.price }}</td>
	                  <td>
	                    <a href="{{ path('edit_item', {'id': item.id}) }}" class="rounded float-right">
	                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
						  <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
						</svg>
	                    </a>
	                  </td>
				    </tr>
  				{% endfor %}
			</tbody>
    	</table>
    </div>
  </div>
</div>
{% endblock %}